<div class="container">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-bordered">
				<tr>
					<th>姓名</th>
					<th>余额</th>
					<th>充值</th>
				</tr>
				<tr ng-repeat='user in usersInfo' ng-class='{"danger": user.money < 0}'>
					<td>{{user.name}}</td>
					<td>
						<div>
							{{user.money}} 元 <button style="margin-left:10px" ng-if="user.money < 0" type="button" class="btn btn-success" ng-click="clearToZero($index)">清除赤字</button>
						</div>
					</td>
					<td style="width:40%">
						<div class="col-lg-12">
						  <div class="input-group">
						      <input type="text" class="form-control" placeholder="金额" ng-model="inmoney">
						      <span class="input-group-btn">
						        <button class="btn btn-primary" type="button" ng-click="ctmd(inmoney, $index)">充TMD</button>
						      </span>
						    </div><!-- /input-group -->
						  </div><!-- /.col-lg-6 -->
						</div><!-- /.row -->
					</td>
				</tr>
			</table>	
		</div>
	</div>
</div>
